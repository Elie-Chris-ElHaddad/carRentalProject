<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <title>Welcome to Haddad's Car Rental System</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f2f2f2;
            color: #333;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #00ff00;
            text-align: center;
            padding: 1em;
        }

        nav ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        nav li {
            display: inline;
            margin-right: 20px;
        }

        main {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        section {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        h2 {
            color: #333;
        }

        h3 {
            color: #00ff00;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #333;
            color: #00ff00;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin-bottom: 5px;
        }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        button {
            background-color: #333;
            color: #00ff00;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        footer {
            background-color: #333;
            color: #00ff00;
            text-align: center;
            padding: 1em;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<body>
    <header>
        <h1>Welcome to Haddad's Car Rental System</h1>
        <!-- Navigation Bar -->
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <!-- Add other navigation links as needed -->
            </ul>
        </nav>
    </header>

    <main>
        <section>
            <h2>Car Rental Information</h2>
            <!-- Display the information fetched from the server -->
            <p>User: <%= user %></p>
            <p>Title: <%= title %></p>
            <p>Content: <%= content %></p>
            <p>Notification: <%= notification %></p>

            <!-- Display the list of users in a table -->
            <h3>List of Users:</h3>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < users.length; i++) { %>
                        <tr>
                            <td><%= users[i].Name %></td>
                            <td><%= users[i].Last_Name %></td>
                            <td><%= users[i].Email %></td>
                            <td><%= users[i].Phone %></td>
                            <td>
                                <!-- <button onclick="">Edit</button> -->
                                <button class="btn btn-secondary btn-sm edit-btn" data-User_ID ="<%= users[i].User_ID %>">Edit</button>
                                <button>Delete</button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <!-- Button to add a new user -->
            <div class="button-container">
                <button>Add User</button>
            </div>
        </section>
    </main>

    <footer>
        <p>&copy; 2023 Haddad's Car Rental System</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.edit-btn').click(function () {
                console.log("Edit button clicked"); // For testing purposes
                var $td = $(this).closest('tr').find('td:nth-child(6)'); // Get the cell to place the edit form
                var User_ID = $(this).data('User_ID');
    
                // Fetch user details using AJAX (replace this with your actual API endpoint)
                $.ajax({
                    url: `/api/users/${User_ID}`, // replace with your actual API endpoint
                    type: 'GET',
                    success: function (user) {
                        // Create the edit form dynamically
                        var editForm = `
                            <form id="editForm${User_ID}" action="/api/users/updateUser/${User_ID}" method="POST">
                                <input type="hidden" name="_method" value="PUT">
                                <label for="first_name">First Name:</label>
                                <input type="text" id="first_name" name="first_name" value="${user.user_first_name}">
                                <br>
    
                                <label for="last_name">Last Name:</label>
                                <input type="text" id="last_name" name="last_name" value="${user.user_last_name}">
                                <br>
    
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" value="${user.user_email}">
                                <br>
    
                                <label for="password">New Password:</label>
                                <input type="password" id="password" name="password">
                                <br>
    
                                <label for="dob">Date of Birth:</label>
                                <input type="date" id="dob" name="dob" value="${user.user_dob ? user.user_dob.toISOString().substr(0, 10) : ''}">
                                <br>
    
                                <button type="submit">Update</button>
                            </form>
                        `;
    
                        // Replace the button with the edit form
                        $td.empty().append(editForm);
                    },
                    error: function (error) {
                        console.error('Error fetching user details:', error);
                    }
                });
            });
        });
    </script>
</html>
</body>

</html>
